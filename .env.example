# Semantic SEO Platform - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# AI Provider API Keys (at least one required)
# =============================================================================

# OpenRouter - Recommended (access to multiple models through one API)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# OpenAI Direct
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Direct
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google (Gemini)
GOOGLE_API_KEY=your_google_api_key_here

# =============================================================================
# Default AI Settings
# =============================================================================

DEFAULT_AI_PROVIDER=openrouter
DEFAULT_MODEL=anthropic/claude-3-sonnet

# =============================================================================
# Google Search Console (Optional - for Analytics)
# =============================================================================

# Path to your Google OAuth credentials JSON file
GSC_CREDENTIALS_PATH=credentials.json

# =============================================================================
# SERP API (Optional - for competitor analysis)
# =============================================================================

SERPER_API_KEY=your_serper_api_key_here

# =============================================================================
# Application Settings
# =============================================================================

# Database path (relative to app directory)
DATABASE_PATH=data/semantic_seo.db

# Export directory
EXPORT_PATH=data/exports

# Debug mode (true/false)
DEBUG_MODE=false

# =============================================================================
# Cloud Sync (Optional)
# =============================================================================

# Supabase
SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_supabase_key_here

# Or Firebase
FIREBASE_PROJECT_ID=your_firebase_project_id