# Streamlit Secrets Configuration Template
# ==========================================
# Copy this content to your Streamlit Cloud app's Secrets tab
# (App Settings > Secrets)
#
# OR for local development, copy this file to:
# .streamlit/secrets.toml (and remove .example from filename)
#
# IMPORTANT: Never commit the actual secrets.toml file!

# ===========================================
# AI PROVIDER API KEYS (at least one required)
# ===========================================

# OpenRouter - Recommended (access to multiple models)
# Get your key at: https://openrouter.ai/keys
OPENROUTER_API_KEY = "sk-or-v1-your-openrouter-key-here"

# OpenAI - Direct access to GPT models
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY = "sk-your-openai-key-here"

# Anthropic - Direct access to Claude models
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY = "sk-ant-your-anthropic-key-here"

# Google AI (Gemini) - Direct access to Gemini models
# Get your key at: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY = "your-google-api-key-here"

# ===========================================
# AI SETTINGS
# ===========================================

# Default AI provider: openrouter, openai, anthropic, or google
DEFAULT_AI_PROVIDER = "openrouter"

# Default model (provider-specific)
# OpenRouter: anthropic/claude-3-sonnet, openai/gpt-4o, etc.
# OpenAI: gpt-4o, gpt-4o-mini, etc.
# Anthropic: claude-3-5-sonnet-latest, etc.
# Google: gemini-1.5-flash, gemini-1.5-pro, etc.
DEFAULT_MODEL = "anthropic/claude-3-sonnet"

# ===========================================
# OPTIONAL: SERP ANALYSIS
# ===========================================

# Serper API for SERP analysis features
# Get your key at: https://serper.dev
SERPER_API_KEY = "your-serper-api-key-here"

# ===========================================
# OPTIONAL: CLOUD SYNC (Supabase or Firebase)
# ===========================================

# Supabase (for cloud database sync)
# Get your credentials at: https://supabase.com
SUPABASE_URL = "https://your-project.supabase.co"
SUPABASE_KEY = "your-supabase-anon-key-here"

# Firebase (alternative to Supabase)
# Get your project ID at: https://console.firebase.google.com
FIREBASE_PROJECT_ID = "your-firebase-project-id"

# ===========================================
# OPTIONAL: GOOGLE SEARCH CONSOLE
# ===========================================

# GSC credentials (JSON content as string)
# Note: For GSC, you'll need to upload credentials via the Settings page
# GSC_CREDENTIALS_PATH = "data/gsc_credentials.json"

# ===========================================
# APP SETTINGS
# ===========================================

# Enable debug mode (shows additional logging)
DEBUG_MODE = "false"

# Database path (use default for Streamlit Cloud)
DATABASE_PATH = "data/semantic_seo.db"

# Export path for generated files
EXPORT_PATH = "data/exports"

# ===========================================
# NESTED STRUCTURE (Alternative format)
# ===========================================
# You can also use nested TOML structure:
#
# [api_keys]
# OPENROUTER_API_KEY = "sk-or-v1-xxx"
# OPENAI_API_KEY = "sk-xxx"
# ANTHROPIC_API_KEY = "sk-ant-xxx"
# GOOGLE_API_KEY = "xxx"
# SERPER_API_KEY = "xxx"
#
# [database]
# path = "data/semantic_seo.db"
#
# [ai]
# default_provider = "openrouter"
# default_model = "anthropic/claude-3-sonnet"